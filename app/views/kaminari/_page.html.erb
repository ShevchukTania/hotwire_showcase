<% if page.current? %>
  <%= content_tag :a, page, data: { remote: remote }, rel: (page.next? ? 'next' : (page.prev? ? 'prev' : nil)), class: 'inline-flex items-center border-t-2 border-indigo-500 px-2 pt-2 text-sm font-medium text-indigo-600 ' %>
<% else %>
  <%= link_to page, url, remote: remote, rel: (page.next? ? 'next' : (page.prev? ? 'prev' : nil)), class: 'inline-flex items-center border-t-2 border-transparent px-2 pt-2 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700' %>
<% end %>

