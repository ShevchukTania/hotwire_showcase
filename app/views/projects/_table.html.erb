<div class="px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-base font-semibold text-gray-900">Projects</h1>
      <p class="mt-2 text-sm text-gray-700">A list of all the projects</p>
    </div>
    <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
      <div data-controller="modal">
        <dialog
          data-modal-target="dialog"
          class="relative rounded-lg shadow-xl w-full max-w-lg fixed top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 backdrop:bg-gray-500/75"
        >
          <div class="absolute top-0 right-0 pt-4 pr-4">
            <button
              type="button"
              data-action="modal#close"
              class="text-gray-400 hover:text-gray-500 focus:outline-none"
            >
              <span class="sr-only">Close</span>
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>

          <div class="bg-white px-4 pb-4 pt-5 sm:p-6 sm:pb-4">
            <div class="sm:flex sm:items-start w-full">
              <div class="mt-3 text-center sm:mt-0 sm:text-left w-full">
                <h3 class="text-base font-semibold leading-6 text-gray-900">New project</h3>
                <div class="mt-2">
                  <%= render "form", project: @project %>
                </div>
              </div>
            </div>
          </div>
        </dialog>

        <button
          data-action="modal#open"
          class="block rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
        >
          Add Project
        </button>
      </div>
    </div>
  </div>
  <div class="mt-8 flow-root">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
        <table class="min-w-full max-w-full divide-y divide-gray-300">
          <thead>
          <tr>
            <th scope="col" class="w-1/3 py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-3">Title</th>
            <th scope="col" class="w-1/3 px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Description</th>
            <th scope="col" class="w-1/6 px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Start & End Date</th>
            <th scope="col" class="w-1/6 relative py-3.5 pl-3 pr-4 sm:pr-3">
              <span class="sr-only">Actions</span>
            </th>
          </tr>
          </thead>
          <tbody id="projects" class="bg-white">
            <% projects.each do |project| %>
              <%= render "projects/project", project: project %>
            <% end %>
          </tbody>
        </table>
        <%= paginate projects %>
      </div>
    </div>
  </div>
</div>