<tr id="<%= dom_id(project) %>" class="even:bg-gray-50">
  <td class="w-1/3 whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-3">
    <%= link_to project.name, project_path(project), data: { turbo_frame: "_top" } %>
  </td>
  <td class="w-1/3 px-3 py-4 text-sm text-gray-500">
    <%= project.description.presence || '-' %>
  </td>
  <td class="w-1/6 whitespace-nowrap px-3 py-4 text-sm text-gray-500">
    <%= I18n.l(project.start_date, format: :default) %>
    -
    <%= I18n.l(project.end_date, format: :default) %>
  </td>
  <td class="w-1/6 relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-3">
    <%= button_to project_path(project),
                  method: :delete,
                  class: "text-red-600 hover:text-red-900",
                  form: {
                    data: { turbo_confirm: "Are you sure? This will delete all tasks associated with this project." }
                  } do %>
      <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M8.75 1A2.75 2.75 0 006 3.75v.443c-.795.077-1.584.176-2.365.298a.75.75 0 10.23 1.482l.149-.022.841 10.518A2.75 2.75 0 007.596 19h4.807a2.75 2.75 0 002.742-2.53l.841-10.52.149.023a.75.75 0 00.23-1.482A41.03 41.03 0 0014 4.193V3.75A2.75 2.75 0 0011.25 1h-2.5zM10 4c.84 0 1.673.025 2.5.075V3.75c0-.69-.56-1.25-1.25-1.25h-2.5c-.69 0-1.25.56-1.25 1.25v.325C8.327 4.025 9.16 4 10 4zM8.58 7.72a.75.75 0 00-1.5.06l.3 7.5a.75.75 0 101.5-.06l-.3-7.5zm4.34.06a.75.75 0 10-1.5-.06l-.3 7.5a.75.75 0 101.5.06l.3-7.5z" clip-rule="evenodd" />
      </svg>
    <% end %>
  </td>
</tr>