<div class="container mx-auto px-4">
  <h1 class="text-2xl font-bold mb-4"><%= @project.name %></h1>
  <div class="mb-4">
    <p>Description: <%= @project.description %></p>
    <p>Start date: <%= @project.start_date %></p>
    <p>End date: <%= @project.end_date %></p>
  </div>

  <div id="new_task" class="mb-4 w-1/4">
    <%= render "tasks/form", project: @project, task: @project.tasks.build %>
  </div>

  <div>
    <div class="px-4 sm:px-6 lg:px-8">
      <div class="sm:flex sm:items-center">
        <div class="sm:flex-auto">
          <h1 class="text-base font-semibold text-gray-900">Task</h1>
          <p class="mt-2 text-sm text-gray-700">A list of all project tasks</p>
        </div>
      </div>
      <%= render "tasks/table", tasks: @tasks %>
    </div>
  </div>
</div>