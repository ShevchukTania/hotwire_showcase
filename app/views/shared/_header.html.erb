<header class="bg-white" data-turbo-permanent=true>
  <nav class="mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8" aria-label="Global">
    <div class="flex items-center gap-x-12">
      <%= link_to root_path, class: "-m-1.5 p-1.5" do %>
        <span class="sr-only">Your Company</span>
        <%= image_tag("https://tailwindcss.com/plus-assets/img/logos/mark.svg?color=indigo&shade=600", class: "h-8 w-auto", alt: "") %>
      <% end %>
      <div class="hidden lg:flex lg:gap-x-12">
        <% ["Projects", "Tasks"].each do |item| %>
          <%= link_to item, "/", class: "text-sm/6 font-semibold text-gray-900" %>
        <% end %>
      </div>
    </div>
    <div class="flex lg:hidden">
      <button type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700">
        <span class="sr-only">Open main menu</span>
        <svg class="size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>
    </div>
    <div class="hidden lg:flex">
      <%= link_to "Log in â†’", "#", class: "text-sm/6 font-semibold text-gray-900" %>
    </div>
  </nav>

  <!-- Mobile menu -->
  <div class="lg:hidden" role="dialog" aria-modal="true">
    <div class="fixed inset-0 z-10"></div>
    <div class="fixed inset-y-0 right-0 z-10 w-full overflow-y-auto bg-white px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10">
      <div class="flex items-center justify-between">
        <%= link_to root_path, class: "-m-1.5 p-1.5" do %>
          <span class="sr-only">Your Company</span>
          <%= image_tag("https://tailwindcss.com/plus-assets/img/logos/mark.svg?color=indigo&shade=600", class: "h-8 w-auto", alt: "") %>
        <% end %>
        <button type="button" class="-m-2.5 rounded-md p-2.5 text-gray-700">
          <span class="sr-only">Close menu</span>
          <svg class="size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div class="mt-6 flow-root">
        <div class="-my-6 divide-y divide-gray-500/10">
          <div class="space-y-2 py-6">
            <% ["Projects", "Tasks"].each do |item| %>
              <%= link_to item, "/", class: "-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-gray-900 hover:bg-gray-50" %>
            <% end %>
          </div>
          <div class="py-6">
            <%= link_to "Log in", "#", class: "-mx-3 block rounded-lg px-3 py-2.5 text-base/7 font-semibold text-gray-900 hover:bg-gray-50" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
