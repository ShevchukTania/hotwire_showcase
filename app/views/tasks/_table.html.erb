<div class="mt-8 flow-root">
  <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
      <table class="min-w-full max-w-full divide-y divide-gray-300">
        <thead>
        <tr>
          <th scope="col" class="w-1/3 py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-3">Title</th>
          <th scope="col" class="w-1/3 px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Description</th>
          <th scope="col" class="w-1/6 px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Due Date</th>
          <th scope="col" class="w-1/6 px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Status</th>
          <th scope="col" class="w-1/6 relative py-3.5 pl-3 pr-4 sm:pr-3">
            <span class="sr-only">Actions</span>
          </th>
        </tr>
        </thead>
        <tbody id="tasks" class="bg-white">
          <% tasks.each do |task| %>
            <%= render "tasks/task", task: task %>
          <% end %>
        </tbody>
      </table>
      <%= paginate tasks %>
    </div>
  </div>
</div>
